<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#ff0000"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="40dp" android:weightSum="8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_value"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:gravity="left|top"
                android:maxLines="2"
                android:text="111"
                android:textColor="@color/color_1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="0dp" android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:gravity="left|top"
                android:maxLines="2"
                android:text="111" android:textSize="12sp"
                android:textColor="@color/color_1" />

            <TextView
                android:id="@+id/txt_floor"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:gravity="left|top" android:textSize="12sp"
                android:maxLines="2"
                android:text="111"
                android:textColor="@color/color_1" />

            <TextView
                android:id="@+id/txt_bay"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:gravity="left|top" android:textSize="12sp"
                android:maxLines="2"
                android:text="111"
                android:textColor="@color/color_1" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:ellipsize="end" android:textSize="12sp"
                android:gravity="left|top"
                android:maxLines="2"
                android:text="111"
                android:textColor="@color/color_1" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="0dp" android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:ellipsize="end" android:textSize="12sp"
                android:maxLines="2" android:gravity="left|top"
                android:text="11/11/1111"
                android:textColor="@color/color_3" />

            <TextView android:layout_marginStart="5dp" android:text="00h" android:layout_alignParentRight="true"
                android:layout_width="0dp" android:layout_weight="1" android:textColor="@color/red"
                android:layout_centerVertical="true" android:layout_gravity="center_vertical"
                android:id="@+id/txt_compare" android:gravity="left|top" android:textStyle="bold"
                android:layout_height="match_parent" android:textSize="14sp" android:layout_marginEnd="5dp"/>

        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>
</layout>