<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_car" android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:adjustViewBounds="true" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent" android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_make"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.33" />

            <TextView
                android:id="@+id/txt_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                app:layout_constraintLeft_toRightOf="@id/txt_make"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.33" />

            <TextView
                android:id="@+id/txt_variant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.33" />

            <TextView
                android:id="@+id/txt_year"
                android:layout_width="0dp" android:layout_marginTop="10dp"
                android:layout_height="40dp" android:gravity="top"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_make"
                app:layout_constraintWidth_percent="0.5" />

            <View
                android:id="@+id/view_color"
                android:layout_width="100dp" android:layout_marginStart="10dp"
                android:layout_height="40dp" app:layout_constraintTop_toTopOf="@+id/txt_year"
                app:layout_constraintLeft_toRightOf="@id/txt_year"
                app:layout_constraintWidth_percent="0.5" />

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_year" />

        </android.support.constraint.ConstraintLayout>
        <android.support.v7.widget.RecyclerView android:layout_marginTop="20dp"
            android:scrollbars="vertical"
            android:layout_width="match_parent" android:id="@+id/recycler_view"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</layout>