<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content" android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="120dp" android:text="Value:"
                    android:textColor="@color/color_1"
                    android:layout_height="wrap_content" />
                <TextView android:id="@+id/txt_value"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:layout_marginTop="5dp"
                android:layout_width="wrap_content" android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="120dp" android:text="Location:"
                    android:textColor="@color/color_1"
                    android:layout_height="wrap_content" />
                <TextView android:id="@+id/txt_location"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:layout_marginTop="5dp"
                android:layout_width="wrap_content" android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="120dp" android:text="Floor:"
                    android:textColor="@color/color_1"
                    android:layout_height="wrap_content" />
                <TextView android:id="@+id/txt_floor"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:layout_marginTop="5dp"
                android:layout_width="wrap_content" android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="120dp" android:text="Bay:"
                    android:textColor="@color/color_1"
                    android:layout_height="wrap_content" />
                <TextView android:id="@+id/txt_bay"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:layout_marginTop="5dp"
                android:layout_width="wrap_content" android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="120dp" android:text="Operator:"
                    android:textColor="@color/color_1"
                    android:layout_height="wrap_content" />
                <TextView android:id="@+id/txt_operator"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:layout_marginTop="5dp"
                android:layout_width="wrap_content" android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="120dp" android:text="Last Timestamp:"
                    android:textColor="@color/color_1"
                    android:layout_height="wrap_content" />
                <TextView android:id="@+id/txt_timestamp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
</layout>